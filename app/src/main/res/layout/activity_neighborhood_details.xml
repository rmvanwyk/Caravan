<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/neighborhood_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/neighborhood_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Pink"
            android:text="\n-Neighborhood-"
            android:textAlignment="center"
            android:textColor="@color/Grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curated Blueprints"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/neighborhood_curated_blockA"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <LinearLayout
                android:id="@+id/neighborhood_curated_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/neighborhood_blueprint_thumbnailA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_curated_imageA"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_curated_textA"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_curated_textA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintA"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_curated_imageA" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/neighborhood_blueprint_thumbnailB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_curated_imageB"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_curated_textB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_curated_textB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintB"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_curated_imageB" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/neighborhood_blueprint_thumbnailC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_curated_imageC"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_curated_textC"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_curated_textC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintC"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_curated_imageC" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/neighborhood_blueprint_thumbnailD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/curated_imageD"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_curated_textD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_curated_textD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintD"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_curated_imageD" />
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Locations"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/neighborhood_loc_blockA"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <LinearLayout

                android:id="@+id/neighborhood_loc_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/neighborhood_loc_thumbnailA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_loc_imageA"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_loc_textA"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_loc_textA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="LocationA"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_loc_imageA" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/neighborhood_loc_thumbnailB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_loc_imageB"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_loc_textB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_loc_textB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintB"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_loc_imageB" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/neighborhood_loc_thumbnailC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_loc_imageC"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_loc_textC"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_loc_textC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintC"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_loc_imageC" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/neighborhood_loc_thumbnailD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/neighborhood_loc_imageD"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toTopOf="@+id/neighborhood_loc_textD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@color/Green" />

                    <TextView
                        android:id="@+id/neighborhood_loc_textD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="BlueprintD"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neighborhood_loc_imageD" />
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>