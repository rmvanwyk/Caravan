                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_curated_textB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintB"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_curated_imageB" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/b_thumbnailC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/city_curated_imageC"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/city_curated_textC"
