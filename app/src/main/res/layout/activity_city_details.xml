                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_curated_textC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintC"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_curated_imageC" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/b_thumbnailD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/curated_imageD"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/city_curated_textD"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_curated_textD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintD"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_curated_imageD" />
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Locations"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/city_loc_blockA"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <LinearLayout
                    android:id="@+id/city_loc_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/l_thumbnailA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/city_loc_imageA"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/city_loc_textA"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_loc_textA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="LocationA"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_loc_imageA" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_thumbnailB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/city_loc_imageB"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/city_loc_textB"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_loc_textB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintB"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_loc_imageB" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_thumbnailC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/neighborhood_loc_imageC"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/neighborhood_loc_textC"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/neighborhood_loc_textC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintC"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/neighborhood_loc_imageC" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/l_thumbnailD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/city_loc_imageD"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            app:layout_constraintBottom_toTopOf="@+id/city_loc_textD"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Green" />

                        <TextView
                            android:id="@+id/city_loc_textD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="BlueprintD"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/city_loc_imageD" />
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>