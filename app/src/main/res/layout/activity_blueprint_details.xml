<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tint="@color/White">

    <TextView
        android:id="@+id/title_blueprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="16dp"
        android:text="Guide Name"
        android:textAllCaps="true"
        android:textColor="@color/Orange"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/loc_view"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="8dp"
        android:tint="@color/Pink"
        android:src="@drawable/ic_favorite_border_white_24px"
        app:layout_constraintBottom_toTopOf="@+id/loc_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_blueprint"
        app:layout_constraintTop_toTopOf="@+id/title_blueprint"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_favorite_border_white_24px" />

    <HorizontalScrollView
        android:id="@+id/loc_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_blueprint">

        <LinearLayout
            android:id="@+id/loc_horizontal_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
